{
  "manifest_version": 2,
  "name": "Rain Thunder Wind",
  "version": "1.0",

  "description": "Play the sound of rain, thunder, or wind",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon128.png"
  },

  "permissions": ["activeTab", "downloads", "<all_urls>"],

  "browser_action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon128.png"
    },
    "default_title": "Rain Thunder Wind",
    "default_popup": "popup.html"
  }
}
